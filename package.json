{
  "name": "data-calculator",
  "version": "0.0.1",
  "description": "Range slider calculator",
  "main": "main.js",
  "scripts": {
    "start": "npm run serve",
    "build": "liquidjs --template @./index.liquid > index.html && npm run lint",
    "lint": "prettier --write index.html",
    "serve": "live-server & nodemon --watch . --ext .liquid --exec 'echo \"reloading...\" && npm run build'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dralbamoda/dataCalculator.git"
  },
  "keywords": [
    "range",
    "sliders",
    "data",
    "calculator"
  ],
  "author": "dralbamoda",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dralbamoda/dataCalculator/issues"
  },
  "homepage": "https://github.com/dralbamoda/dataCalculator#readme",
  "devDependencies": {
    "liquidjs": "^10.7.0",
    "live-server": "^1.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "nodemon": "^2.0.22",
    "prettier": "2.8.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
